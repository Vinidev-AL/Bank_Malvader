#include <stdio.h>
#include <stdlib.h>

void abrirConta() {
    printf("Opcao selecionada: Abertura de Conta\n");
}

void encerrarConta() {
    printf("Opcao selecionada: Encerramento de Conta\n");
}

void consultarDados() {
    printf("Opcao selecionada: Consultar Dados\n");
}

void alterarDados() {
    printf("Opcao selecionada: Alterar Dados\n");
}

void cadastrarFuncionarios() {
    printf("Opcao selecionada: Cadastro de Funcionarios\n");
    
}

void gerarRelatorios() {
    printf("Opção selecionada: Gerar Relatórios\n");
    
}

int main() {
    int opcao;
    do {
        printf("\nMENU FUNCIONARIO\n");
        printf("1-ABERTURA DE CONTA\n");
        printf("2-ENCERRAMENTO DE CONTA\n");
        printf("3-CONSULTAR DADOS\n");
        printf("4-ALTERAR DADOS\n");
        printf("5-CADASTRO DE FUNCIONARIOS\n");
        printf("6-GERAR RELATÓRIOS\n");
        printf("7-SAIR\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        switch(opcao) {
            case 1:
                abrirConta();
                break;
            case 2:
                encerrarConta();
                break;
            case 3:
                consultarDados();
                break;
            case 4:
                alterarDados();
                break;
            case 5:
                cadastrarFuncionarios();
                break;
            case 6:
                gerarRelatorios();
                break;
            case 7:
                printf("Saindo...\n");
                break;
            default:
                printf("Opcao invalida. Tente novamente.\n");
        }
    } while(opcao != 7);

    return 0;
}
